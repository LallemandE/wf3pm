{% extends 'base.html.twig' %}
{% block title %}Product List{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" type="text/css" href="/css/table.css">
{% endblock %}

{% block body %}
	<h1>Product List</h1>
	
	{% for product in productArray %}
	<table>
		<tr>
			<td>Project name</td>
			<td>
		    {{ product.name }}
		    </td>
		</tr>
		<tr>
			<td>Version</td>
			<td>
		    v{{ product.version }}
		    </td>
		</tr>
		<tr>
			<td>Description</td>
			<td>
		    {{ product.description }}
		    </td>
		</tr>
	</table>
	{% endfor %}
	
{% endblock %}